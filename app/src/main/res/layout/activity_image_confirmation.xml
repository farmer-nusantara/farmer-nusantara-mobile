<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ivDiseaseImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ImageConfirmationActivity">

    <ImageView
        android:id="@+id/ivDisease"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@tools:sample/avatars"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:alpha="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbImageConfirmation"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <RelativeLayout
                android:id="@+id/rlContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">
                <TextView
                    android:id="@+id/tvTBTitle"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/image_confirmation"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:alpha="0.7"
        android:contentDescription="@string/imageFarmland"
        android:src="@drawable/button_container"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/ConfirmBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="29dp"
        android:contentDescription="@string/imageFarmland"
        android:src="@drawable/ic_baseline_check_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recaptureBtn"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/primary_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/ConfirmBtn"
        app:layout_constraintStart_toStartOf="@id/ConfirmBtn"
        app:layout_constraintTop_toBottomOf="@id/ConfirmBtn"
        tools:text="Pakai Gambar" />

    <ImageView
        android:id="@+id/recaptureBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="29dp"
        android:contentDescription="@string/imageFarmland"
        android:src="@drawable/close_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ConfirmBtn"
        app:tint="@color/danger_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/recaptureBtn"
        app:layout_constraintStart_toStartOf="@id/recaptureBtn"
        app:layout_constraintTop_toBottomOf="@id/recaptureBtn"
        tools:text="Ambil Ulang" />

</androidx.constraintlayout.widget.ConstraintLayout>